/*--------------------------------------------------------------------------*
                                String table
 *--------------------------------------------------------------------------*/

STRINGTABLE
BEGIN
STR_UPDATE_BATCH	"@echo off\r\nsetlocal\r\ntaskkill /im "":appexename""\r\nstart /wait :setuppath\r\ndel "":setuppath""\r\ndel ""%~f0"""
END

/*--------------------------------------------------------------------------*
                              Version information
 *--------------------------------------------------------------------------*/

#define VER_NUM     WIN_SPARKLE_VERSION_MAJOR,WIN_SPARKLE_VERSION_MINOR,WIN_SPARKLE_VERSION_MICRO,0
#define VER_STR     WIN_SPARKLE_VERSION_STRING

#ifdef DEBUG
#define VER_DEBUG    VS_FF_DEBUG
#else
#define VER_DEBUG    0
#endif

1 VERSIONINFO
 FILEVERSION     VER_NUM
 PRODUCTVERSION  VER_NUM
 FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
 FILEFLAGS       VER_DEBUG
 FILEOS          VOS_NT_WINDOWS32
 FILETYPE        VFT_DLL
 FILESUBTYPE     VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904B0" // US English, Unicode
        BEGIN
            VALUE "Comments", "WinSparkle updates checking library (http://winsparkle.org)."
            VALUE "CompanyName", "winsparkle.org\0"
            VALUE "FileDescription", "WinSparkle updater\0"
            VALUE "FileVersion", VER_STR "\0"
            VALUE "InternalName", "WinSparkle\0"
            VALUE "OriginalFilename", "WinSparkle.dll\0"
            VALUE "LegalCopyright", "Copyright (C) 2009-2010 Vaclav Slavik\0"
            VALUE "ProductName", "WinSparkle\0"
            VALUE "ProductVersion", VER_STR "\0"
        END
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 0x04B0
    END
END

